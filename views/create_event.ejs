<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Event | Mega Meetups</title>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Tailwind -->
    <link
            href="https://unpkg.com/tailwindcss/dist/tailwind.min.css"
            rel="stylesheet"
    />
    <style>
        @import url("https://fonts.googleapis.com/css?family=Karla:400,700&display=swap");
        .font-family-karla {
            font-family: karla;
        }
        .bg-sidebar {
            background: #f64060;
        }
        .cta-btn {
            color: #f64060;
            background: #ffe3e8;
        }
        .upgrade-btn {
            background: #1947ee;
        }
        .upgrade-btn:hover {
            background: #0038fd;
        }
        .active-nav-link {
            background: #ffe3e8;
            color: #f64060;
        }
        .nav-item:hover {
        }
        .account-link:hover {
            background: #f64060;
        }
    </style>
</head>
<body class="bg-gray-100 font-family-karla flex">
<aside class="relative bg-sidebar h-screen w-120 hidden sm:block shadow-xl">
    <div class="p-20">
        <a
                href="/"
                class="
            text-white text-3xl
            font-semibold
            uppercase
            hover:text-gray-300
          "
        >Megameetups</a
        >
        <a href="/events/create"
           class="
            w-full
            bg-white
            cta-btn
            font-semibold
            py-2
            mt-5
            rounded-br-lg rounded-bl-lg rounded-tr-lg
            shadow-lg
            hover:shadow-xl hover:bg-gray-300
            flex
            items-center
            justify-center
          "
        >
            <i class="fas fa-plus mr-3"></i> Create
        </a>
    </div>
    <nav class="text-white text-base font-semibold pt-3">
        <% if (events.length) { %>
            <% events.forEach((event) => { %>
                <a
                        href="/dashboard/events/<%= event.title %>"
                        class="
                flex
                items-center
                opacity-75
                hover:opacity-100
                text-white
                py-4
                pl-6
                nav-item
                "
                >
                    <%= event.title %>
                </a>
        <% }) }%>
    </nav>
</aside>

<div class="w-full flex flex-col h-screen overflow-y-hidden">
    <!-- Desktop Header -->
    <header class="w-full items-center bg-sidebar py-2 px-6 hidden sm:flex">
        <div class="w-1/2"></div>
        <div x-data="{ isOpen: false }" class="relative w-1/2 flex justify-end">
            <button
                    @click="isOpen = !isOpen"
                    class="
              realtive
              z-10
              w-12
              h-12
              rounded-full
              overflow-hidden
              border-4 border-gray-400
              hover:border-gray-300
              focus:border-gray-300 focus:outline-none
            "
            >
                <img src="/placeholder.png" />
            </button>
            <h1 class="px-5 pt-2.5 text-white text-base font-semibold">Hello, <%= name %>.</h1>
            <button
                    x-show="isOpen"
                    @click="isOpen = false"
                    class="h-full w-full fixed inset-0 cursor-default"
            ></button>
            <div
                    x-show="isOpen"
                    class="absolute w-32 bg-white rounded-lg shadow-lg py-2 mt-16"
            >
                <a href="/logout" class="block px-4 py-2 account-link hover:text-white"
                >Sign Out</a
                >
            </div>
        </div>
    </header>

    <!-- Mobile Header & Nav -->
    <header
            x-data="{ isOpen: false }"
            class="w-full bg-sidebar py-5 px-6 sm:hidden"
    >
    </header>

    <div class="w-full overflow-x-hidden border-t flex flex-col">
        <main class="w-full flex-grow p-20">
            <h1 class="text-3xl text-black pb-6">Create event</h1>

            <div class="flex flex-wrap mt-6">
                <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
                    <div class="leading-loose">
                        <div class="p-10 bg-white rounded shadow-xl">
                            <form action="/events/store" method="post" id="create_form">
                                <div class="">
                                    <label class="block text-sm text-gray-600" for="title"
                                    >Title</label
                                    >
                                    <input
                                            class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded"
                                            id="title"
                                            name="title"
                                            type="text"
                                            required
                                            aria-label="Title"
                                    />
                                </div>
                                <br />
                                <div class="">
                                    <label class="block text-sm text-gray-600" for="description"
                                    >Description</label
                                    >
                                    <input
                                            class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded"
                                            id="description"
                                            name="description"
                                            type="text"
                                            required
                                            aria-label="Description"
                                    />
                                </div>
                                <br />
                                <div class="">
                                    <label class="block text-sm text-gray-600" for="time"
                                    >At</label
                                    >
                                    <input
                                            class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded"
                                            id="dateTime"
                                            type="datetime-local"
                                            name="dateTime"
                                            aria-label="At"
                                            required
                                    />
                                </div>
                                <br />
                                <div class="">
                                    <label class="block text-sm text-gray-600" for="duration"
                                    >Duration</label
                                    >
                                    <input
                                            class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded"
                                            id="duration"
                                            name="duration"
                                            type="text"
                                            required
                                            aria-label="Duration"
                                    />
                                </div>
                            </form>
                            <div class="mt-6">
                                <input type="submit" form="create_form"
                                       class="
                        px-4
                        py-1
                        text-white
                        font-light
                        tracking-wider
                        bg-gray-900
                        rounded
                      "
                                       type="submit"
                                       value="Create">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-full lg:w-1/2 lg:pl-20">
                    <h1 class="text-3xl text-black">Groups</h1>

                    <br />
                    <br />

                    <% groups.forEach(function (group) { %>
                        <div class="mb-5">
                            <input
                                    type="checkbox"
                                    class="
                  form-checkbox
                  checked:bg-red-400 checked:border-transparent
                "
                                    name="groups[]"
                                    value="<%= group.node.urlname %>"
                                    id="<%= group.node.urlname %>"
                                    form="create_form"
                            />
                            <label class="pl-5 text-xl text-gray-500" for="<%= group.node.urlname %>"><%= group.node.name %></label>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- AlpineJS -->
<script
        src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"
        defer
></script>
<!-- Font Awesome -->
<script
        src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"
        integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs="
        crossorigin="anonymous"
></script>
<!-- ChartJS -->
<script
        src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"
        integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI="
        crossorigin="anonymous"
></script>

